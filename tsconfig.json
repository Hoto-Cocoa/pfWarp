{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": false,
    "importHelpers": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "*.ts"
  ]
}
